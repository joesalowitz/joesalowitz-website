---
import '@/styles/globals.css';
import SkyShader2 from '@/components/SkyShader2';
import Navigation from '@/components/Navigation';
import { Button } from '@/components/ui/button';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Sunrise to Sunset</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet" />
    </head>
    <body class="bg-white text-white">
        <div class="p-4">
            <div class="relative w-full h-[calc(100vh-2rem)] rounded-3xl overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-full flex flex-col">
                    <Navigation client:load />
                    <div class="flex-shrink flex mt-32 md:mt-40 p-8 text-[#f9f2e9] z-50 justify-left w-full md:max-w-[800px]">
                        <div class="text-left z-50 h-fit">
                            <h1 class="text-4xl md:text-6xl font-light mb-4 lora-font">Product Design Leader & Co-founder at Lead Scout</h1>
                            <p class="text-xl md:text-2xl font-light my-8 opacity-75">
                                Product teams and early stage companies hire me to design their products and business models so they can quickly achieve
                                product-market fit and scale up.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="w-full h-full overflow-hidden">
                    <SkyShader2 client:only="react" />
                </div>
            </div>
        </div>
    </body>
</html>
